<%- include('../partials/header') %>

  <h1 class="page-title mb-4">All Assignments</h1>

  <% if (!assignments || assignments.length === 0) { %>
    <div class="card hero-card p-4">
      <h5 class="mb-2 text-muted">No assignments yet</h5>
      <p class="text-muted mb-3">
        You haven't added any assignments yet. Start by creating one so you can track your progress.
      </p>
      <a href="/assignments/new" class="btn btn-primary">
        Add your first assignment
      </a>
    </div>
  <% } else { %>

    <div class="card hero-card p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0 text-muted">Assignments Directory</h5>
        <a href="/assignments/new" class="btn btn-primary btn-sm">
          <i class="fa fa-plus"></i> Add Assignment
        </a>
      </div>

      <div class="table-responsive">
        <table class="table mb-0 table-striped align-middle">
          <thead class="table-light">
            <tr>
              <th>Title</th>
              <th>Course</th>
              <th>Due Date</th>
              <th>Status</th>
              <th style="width: 190px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% assignments.forEach(a => { %>
              <tr>
                <td><%= a.title %></td>
                <td><%= a.course %></td>
                <td><%= a.dueDate.toISOString().substring(0,10) %></td>
                <td>
                  <% if (a.status === 'Not started') { %>
                    <span class="status-badge status-not-started"><%= a.status %></span>
                  <% } else if (a.status === 'In progress') { %>
                    <span class="status-badge status-in-progress"><%= a.status %></span>
                  <% } else { %>
                    <span class="status-badge status-done"><%= a.status %></span>
                  <% } %>
                </td>
                <td>
                  <a href="/assignments/<%= a._id %>/edit" class="btn btn-warning btn-sm me-2">
                    Edit
                  </a>
                  <a href="/assignments/<%= a._id %>/delete" class="btn btn-danger btn-sm">
                    Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  <% } %>

<%- include('../partials/footer') %>

